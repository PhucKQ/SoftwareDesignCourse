@model Category

<div class="card shadow border-0 my-4">
    <div class="card-header bg-dark bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Edit Category</h2>
            </div>
        </div>
    </div>

    <div class="card-body p-4">
        <form asp-action="Edit" method="post" class="row" enctype="multipart/form-data">
            <input asp-for="Id" hidden />
            <input asp-for="ImagePath" hidden />
            <div class="p-3 border col-10">
                <div class="row">
                    <div class="form-floating py-2 col-12">
                        <input asp-for="Name" class="form-control border-0 shadow" />
                        <label asp-for="Name" class="ms-2"></label>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-floating py-2 col-12">
                        <input asp-for="Summary" class="form-control border-0 shadow" />
                        <label asp-for="Summary" class="ms-2"></label>
                        <span asp-validation-for="Summary" class="text-danger"></span>
                    </div>

                    <div class="form-floating py-2 col-12">
                        <input type="file" name="file" class="form-control border-0 shadow" />
                        <label asp-for="ImagePath" class="ms-2"></label>
                    </div>
                </div>
                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control align-item-start">Edit</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Category" asp-action="Index" class="btn btn-outline-primary form-control">Back to list</a>
                    </div>
                </div>
            </div>
            <div class="col-2">
                <img src="@Model.ImagePath" style="width: 200px; height: 200px;"/>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}