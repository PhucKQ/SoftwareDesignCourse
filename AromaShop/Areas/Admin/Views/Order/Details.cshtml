@model OrderVM

<form method="post">
    <br />
    <div class="container">
        <div class="card">
            <div class="card-header bg-dark text-light ml-0">
                <div class="container row">
                    <div class="col-12 d-none d-md-block col-md-6 pb-1">
                        <i class="fas fa-shopping-cart"></i> &nbsp; Order Summary
                    </div>
                    <div class="col-12 col-md-4 offset-md-2 text-right">
                        <a class="btn btn-outline-info form-control btn-sm" asp-action="Index">Back to Orders</a>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="container rounded p-2">
                    <div class="row">
                        <div class="col-12 col-lg-6 pb-4">
                            <div class="row">
                                <h4 class="d-flex justify-content-between align-items-center mb-3">
                                    <span class="text-dark">PickUp Details:</span>
                                </h4>
                            </div>
                            <input asp-for="OrderHeader.Id" hidden />
                            <div class="row my-1">
                                <div class="col-3">First Name</div>
                                <div class="col-9">
                                    @if (User.IsInRole(Util.Role_Admin) || User.IsInRole(Util.Role_Employee))
                                    {
                                        <input type="text" class="form-control" asp-for="OrderHeader.FirstName" />
                                        <span asp-validation-for="@Model.OrderHeader.FirstName" class="text-danger"></span>
                                    }
                                    else
                                    {
                                        <input type="text" class="form-control" asp-for="OrderHeader.FirstName" readonly />
                                    }
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Last Name</div>
                                <div class="col-9">
                                    @if (User.IsInRole(Util.Role_Admin) || User.IsInRole(Util.Role_Employee))
                                    {
                                        <input type="text" class="form-control" asp-for="OrderHeader.LastName" />
                                        <span asp-validation-for="@Model.OrderHeader.LastName" class="text-danger"></span>
                                    }
                                    else
                                    {
                                        <input type="text" class="form-control" asp-for="OrderHeader.LastName" readonly />
                                    }
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Phone</div>
                                <div class="col-9">
                                    @if (User.IsInRole(Util.Role_Admin) || User.IsInRole(Util.Role_Employee))
                                    {
                                        <input type="text" class="form-control" asp-for="OrderHeader.PhoneNumber" />
                                        <span asp-validation-for="@Model.OrderHeader.PhoneNumber" class="text-danger"></span>
                                    }
                                    else
                                    {
                                        <input type="text" class="form-control" asp-for="OrderHeader.PhoneNumber" readonly />
                                    }
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Address</div>
                                <div class="col-9">
                                    @if (User.IsInRole(Util.Role_Admin) || User.IsInRole(Util.Role_Employee))
                                    {
                                        <input type="text" class="form-control" asp-for="OrderHeader.StreetAddress" />
                                        <span asp-validation-for="@Model.OrderHeader.StreetAddress" class="text-danger"></span>
                                    }
                                    else
                                    {
                                        <input type="text" class="form-control" asp-for="OrderHeader.StreetAddress" readonly />
                                    }
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">City</div>
                                <div class="col-9">
                                    @if (User.IsInRole(Util.Role_Admin) || User.IsInRole(Util.Role_Employee))
                                    {
                                        <input type="text" class="form-control" asp-for="OrderHeader.City" />
                                        <span asp-validation-for="@Model.OrderHeader.City" class="text-danger"></span>
                                    }
                                    else
                                    {
                                        <input type="text" class="form-control" asp-for="OrderHeader.City" readonly />
                                    }
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">State</div>
                                <div class="col-9">
                                    @if (User.IsInRole(Util.Role_Admin) || User.IsInRole(Util.Role_Employee))
                                    {
                                        <input type="text" class="form-control" asp-for="OrderHeader.State" />
                                        <span asp-validation-for="@Model.OrderHeader.State" class="text-danger"></span>
                                    }
                                    else
                                    {
                                        <input type="text" class="form-control" asp-for="OrderHeader.State" readonly />
                                    }
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Zip Code</div>
                                <div class="col-9">
                                    @if (User.IsInRole(Util.Role_Admin) || User.IsInRole(Util.Role_Employee))
                                    {
                                        <input type="text" class="form-control" asp-for="OrderHeader.PostalCode" />
                                        <span asp-validation-for="@Model.OrderHeader.PostalCode" class="text-danger"></span>
                                    }
                                    else
                                    {
                                        <input type="text" class="form-control" asp-for="OrderHeader.PostalCode" readonly />
                                    }
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Email</div>
                                <div class="col-9">
                                    <input type="text" class="form-control" asp-for="OrderHeader.Email" readonly />
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Order Date</div>
                                <div class="col-9">
                                    <input type="text" class="form-control" value="@Model.OrderHeader.OrderDate.ToShortDateString()" readonly />
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Carrier</div>
                                <div class="col-9">
                                    <input type="text" class="form-control" id="carrier" asp-for="OrderHeader.Carrier" />
                                    <span asp-validation-for="@Model.OrderHeader.Carrier" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Tracking</div>
                                <div class="col-9">
                                    <input type="text" class="form-control" id="trackingNumber" asp-for="OrderHeader.TrackingNumber" />
                                    <span asp-validation-for="@Model.OrderHeader.TrackingNumber" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Shipping Date</div>
                                <div class="col-9">
                                    <input type="text" readonly class="form-control" value="@Model.OrderHeader.ShippingDate.ToShortDateString()" />
                                </div>
                            </div>

                            <div class="row my-1">
                                <div class="col-3">Session ID</div>
                                <div class="col-9">
                                    <input type="text" readonly class="form-control" asp-for="OrderHeader.SessionId" />
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Payment Intent ID</div>
                                <div class="col-9">
                                    <input type="text" readonly class="form-control" asp-for="OrderHeader.PaymentIntentId" />
                                </div>
                            </div>

                            <div class="row my-1">
                                <div class="col-3">Payment Due Date</div>
                                <div class="col-9">
                                    <input type="text" class="form-control" value="@Model.OrderHeader.PaymentDueDate.ToShortDateString()" readonly />
                                </div>
                                <div class="col-3">Payment Date</div>
                                <div class="col-9">
                                    <input type="text" class="form-control" value="@Model.OrderHeader.PaymentDate.ToShortDateString()" readonly />
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Payment Status</div>
                                <div class="col-9">
                                    <input type="text" readonly class="form-control" asp-for="OrderHeader.PaymentStatus" />
                                </div>
                            </div>

                            @if (User.IsInRole(Util.Role_Admin) || User.IsInRole(Util.Role_Employee))
                            {
                                <input type="submit" class="btn btn-warning form-control my-1" value="Update Order Details" asp-action="UpdateOrderDetail" />
                            }

                        </div>

                        <div class="col-12 col-lg-5 offset-lg-1">
                            <h4 class="d-flex justify-content-between align-items-center mb-3">
                                <span class="text-dark">Order Summary</span>
                            </h4>
                            <label class="btn btn-outline-dark form-control my-2">Order Status - @Model.OrderHeader.OrderStatus</label>

                            <ul class="list-group mb-3">

                                @foreach (var item in Model.OrderDetails)
                                {
                                    <li class="list-group-item d-flex justify-content-between p-2">
                                        <div class="row container">
                                            <div class="col-8">
                                                <h6 class="my-0 text-dark">@item.Product.Name</h6>
                                                <small class="text-muted">Price : @item.Price.ToString("c")</small><br />
                                                <small class="text-muted">Quantity : @item.Quantity</small>
                                            </div>
                                            <div class="col-4 text-end">
                                                <p class="text-success">@((item.Price * item.Quantity).ToString("c"))</p>
                                            </div>
                                        </div>
                                    </li>
                                }

                                <li class="list-group-item bg-dark">
                                    <div class="row container">
                                        <div class="col-6">
                                            <h5 class="text-white">TOTAL </h5>
                                        </div>
                                        <div class="col-6 text-end">
                                            <h5 class="text-white">@Model.OrderHeader.OrderTotal.ToString("c")</h5>
                                        </div>
                                    </div>
                                </li>
                            </ul>
                            <!--<input type="submit" class="btn btn-success form-control my-1" value="Pay Now" />-->
                            @if (User.IsInRole(Util.Role_Admin) || User.IsInRole(Util.Role_Employee))
                            {
                                @if (Model.OrderHeader.OrderStatus == Util.StatusApproved)
                                {
                                    <input type="submit" class="btn btn-primary form-control my-1" value="Start Processing" asp-action="StartProcessing" />
                                }

                                @if (Model.OrderHeader.OrderStatus == Util.StatusInProcess)
                                {
                                    <input type="submit" onclick="return validateInput()" class="btn btn-primary form-control my-1" value="Ship Order" asp-action="ShipOrder" />
                                }

                                @if (Model.OrderHeader.OrderStatus != Util.StatusRefunded &&
                                 Model.OrderHeader.OrderStatus != Util.StatusCancelled &&
                                 Model.OrderHeader.OrderStatus != Util.StatusShipped)
                                {
                                    <input type="submit" class="btn btn-danger form-control my-1" value="Cancel Order" asp-action="CancelOrder" />
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function validateInput() {
            if (document.getElementById("trackingNumber").value == "") {
                Swal.fire({
                    icon: 'error',
                    title: 'Oops...',
                    text: 'Please enter tracking number!'
                });
                return false;
            }

            if (document.getElementById("carrier").value == "") {
                Swal.fire({
                    icon: 'error',
                    title: 'Oops...',
                    text: 'Please enter carrier!'
                });
                return false;
            }

            return true;
        }
    </script>
}