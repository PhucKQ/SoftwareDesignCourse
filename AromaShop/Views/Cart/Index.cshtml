@model ShoppingCartVM
<!-- ================ start banner area ================= -->
<section class="blog-banner-area" id="category">
    <div class="container h-100">
        <div class="blog-banner">
            <div class="text-center">
                <h1>Shopping Cart</h1>
                <nav aria-label="breadcrumb" class="banner-breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-area="Default" asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Shopping Cart</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</section>
<!-- ================ end banner area ================= -->
<!--================Cart Area =================-->
<section class="cart_area">
    <div class="container">
        <div class="cart_inner">
            <div class="table-responsive">
                <form id="updateCart" asp-controller="Cart" asp-action="UpdateCart" method="post">
                    <input asp-for="OrderHeader.UserId" hidden />
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">Product</th>
                                <th scope="col">Price</th>
                                <th scope="col">Quantity</th>
                                <th scope="col">Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.ShoppingCartList.Count; i++)
                            {
                                <input asp-for="ShoppingCartList[i].Id" hidden />
                                <input asp-for="ShoppingCartList[i].Product.Id" hidden />
                                <tr>
                                    <td>
                                        <div class="media">
                                            <div class="d-flex">
                                                <img src="@Model.ShoppingCartList[i].Product.ImagePath" alt="@Model.ShoppingCartList[i].Product.Name" style="width: 150px; height: 100px;">
                                            </div>
                                            <div class="media-body">
                                                <p>@Model.ShoppingCartList[i].Product.Name</p>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <h5>@Model.ShoppingCartList[i].Product.Price.ToString("c")</h5>
                                    </td>
                                    <td>
                                        <div class="product_count">
                                            <input type="text" name="ShoppingCartList[@i].Count" id="sst@(Model.ShoppingCartList[i].ProductId)" maxlength="12" value="@Model.ShoppingCartList[i].Count" title="Quantity:"
                                                   class="input-text qty">
                                            <button onclick="var result = document.getElementById('sst@(Model.ShoppingCartList[i].ProductId)'); var sst = result.value; if( !isNaN( sst )) result.value++;return false;"
                                                    class="increase items-count" type="button">
                                                <i class="lnr lnr-chevron-up"></i>
                                            </button>
                                            <button onclick="var result = document.getElementById('sst@(Model.ShoppingCartList[i].ProductId)'); var sst = result.value; if( !isNaN( sst ) &amp;&amp; sst > 0 ) result.value--;return false;"
                                                    class="reduced items-count" type="button">
                                                <i class="lnr lnr-chevron-down"></i>
                                            </button>
                                        </div>
                                    </td>
                                    <td>
                                        <h5>@(Model.ShoppingCartList[i].Total.ToString("c"))</h5>
                                    </td>
                                </tr>
                            }
                            <tr class="bottom_button">
                                <td>
                                    <a class="button" href="javascript:$('#updateCart').submit();">Update Cart</a>
                                </td>
                                <td></td>
                                <td></td>
                                <td>
                                    <div class="cupon_text d-flex align-items-center">
                                        <input type="text" placeholder="Coupon Code">
                                        <a class="primary-btn text-nowrap" href="#">Apply</a>
                                        <a class="button text-nowrap" href="#">Have a Coupon?</a>
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td></td>
                                <td></td>
                                <td><h5>Subtotal</h5></td>
                                <td>
                                    <h5>@Model.OrderHeader.OrderTotal.ToString("c")</h5>
                                </td>
                            </tr>
